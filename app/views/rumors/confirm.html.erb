<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
   <h3>この噂を投稿しますか?</h3>
   <%= form_for(@rumor) do |f| %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :content %>
    <p>タイトル:<%= @rumor.title %></p>
    <p>本文:<%= @rumor.content %></p>
    <%= f.submit "投稿する",class: 'btn btn-primary btn-block' %>
   <% end %>
   <%= form_for(@rumor, url: new_rumor_path, method: 'get') do |f| %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :content %>
    <%= f.submit "もどる",name:'back',class: 'btn btn-default btn-block' %>
  <% end %>
 </div>
</div>
